<LoginScreen>:
    GridLayout:
        cols:1
       # Image:
            #source:'412.png'

        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20
            Label:
                text:"User Login"
                font_size:'30sp'
                
            TextInput:
                id:username
                hint_text:"Username"

            TextInput:
                id:password
                password:True
                hint_text:"Password"
            RelativeLayout:    

                Button:
                    text:"Login" 
                    font_size:'20sp'
                    background_color:1,1,1,0
                    opacity:1 if self.state=='normal' else 0.5
                    color:0.1,0.7,1,1

                    on_press:root.login(root.ids.username.text,root.ids.password.text) 
                    size_hint:0.3,0.5
                    pos_hint:{'center_x':0.5,'center_y':0.6}
                  

            Label:
                id:login_wrong
                text:''



        GridLayout:
            cols:2
            size_hint:0.2,0.2
            padding:10,10
            spacing:10,0
            Button:
                text:"Forget Password"
                background_color:1,1,1,0
                opacity:1 if self.state=='normal' else 0.5
                color:0.1,0.7,1,1
                on_press:root.forgot_password()

            Button:
                text:"Sign Up"  
                background_color:1,1,1,0
                opacity:1 if self.state=='normal' else 0.5
                color:0.1,0.7,1,1  
                on_press:root.sign_up()



<SignUpScreen>:
    GridLayout:
        cols:1
        padding:30,30
        spacing:20,20
        
        Label:
            text:"SIGNUP FOR A NEW JOURNEY"
            font_size:'25sp'
            text_size:self.width,None
            size_hint_y:None
            height:self.texture_size[1]

        TextInput:
            id:username
            hint_text:"Username"

        TextInput:
            id:password
            
            hint_text:"Password" 
        RelativeLayout:    

            Button:
                text:"Sumbit"
                background_color:1,1,1,0
                opacity:1 if self.state=='normal' else 0.5
                color:1,0.1,0.1,1  
                size_hint:0.3,0.5
                pos_hint:{'center_x':0.5,'center_y':0.6}
                on_press:root.add_user(root.ids.username.text,root.ids.password.text)    


<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        Label:
            text:"SIGNUP SUCCESSFUL"
        Button:
            text:"Go To Login Page"
            background_color:1,1,1,0
            opacity:1 if self.state=='normal' else 0.5
            color:0.1,0.7,1,1  
            on_press:root.gotologin()  
<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding:30,30
        spacing:30,30
        RelativeLayout:
            ImageButton:
                on_press:root.logout()
                source:'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint:0.35,0.35
                pos_hint:{'center_x':0.93,'center_y':0.8}

        Label:
            text:'How Do You Feel'
        TextInput:
            id:feeling
            hint_text:'try things like happy,sad,angry,excited,bored....'   
        Button:
            text:'Tell me something..'
            background_color:1,1,1,0
            opacity:1 if self.state=='normal' else 0.5
            color:0.1,0.7,1,1  
            on_press:root.get_quote(root.ids.feeling.text)
        
        ScrollView:

        
            Label:
                id:quote
                text:''
                text_size:self.width,None
                size_hint_y:None
                height:self.texture_size[1]

<ForgotPasswordScreen>:
    GridLayout:
        cols:1
        Image:
            source:'c1.jpg'
        GridLayout:
            cols:1 
            padding: 15,15
            spacing: 20,20
            Button:
                text:"Go To Login Page"
                background_color:1,1,1,0
                opacity:1 if self.state=='normal' else 0.5
                color:0.1,0.7,1,1  
                on_press:root.backtologin()       
               
<RootWidget>:
    LoginScreen:
        name:"login_screen"
    
    SignUpScreen:
        name:"sign_up_screen"

    SignUpScreenSuccess:
        name:"sign_up_screen_success"

    LoginScreenSuccess:
        name:"login_screen_success"  

    ForgotPasswordScreen:
        name:"forgot_password_screen"